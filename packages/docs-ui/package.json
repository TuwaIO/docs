  "private": false,
  "author": "Oleksandr Tkach",
  "license": "Apache-2.0",
  "description": "Unified documentation package for the TUWA Ecosystem.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
